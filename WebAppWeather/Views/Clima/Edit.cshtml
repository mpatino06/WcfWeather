@model CityWeatherModel
@{
    ViewData["Title"] = "Edit";
    string actualizar = "Actualizar";
}

<div class="card mt-5">
    <div class="card-header bg-dark text-light ml-0 row container">
        <div class="col-md-6">
            <i class="fa fa-save"></i>&ensp; Editar tiempo Clima
        </div>
        <div class="col-md-6 text-right"></div>
    </div>
    <div class="card-body">
        <form class="mt-2" method="post" asp-action="Edit" enctype="multipart/form-data">
            <div class="row">
                <input type="hidden" asp-for="@Model.IdCityWeather" />
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="width:100%">
                        <span>ViewBag.Error</span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                }
                <div class="col-6 offset-3">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.City" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" asp-for="@Model.City" readonly />
                            <span asp-validation-for="@Model.City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.Temperature" class="col-form-label"></label>                        
                        </div>
                        <div class="col-8">
                            <input type="number" class="form-control" asp-for="@Model.Temperature" />
                            @*@Html.TextAreaFor(x => x.Temperature, new { @class = "form-control" })*@
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="@Model.Description" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" asp-for="@Model.Description" />
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">

                        <partial name="_ButtonOptionPartial" model="actualizar" />

                    </div>
                </div>

            </div>

        </form>
    </div>
</div>

